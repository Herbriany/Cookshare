<% layout('layouts/boilerplate') -%>

<div class="container">
        <div class="spacer">
            <div class="row m-0">
                <div class="col-lg-8">
                    <div class="contact-box p-r-40">
                        <h4 class="title">Reset Password</h4>
                        <form data-aos="fade-left" data-aos-duration="1200" action="/login" method="POST">
                            <div class="row">
                                <div class="col-lg-6">
                                    <div class="form-group m-t-15">
                                        <label for="password">New Password:</label>
                                        <input type="password" name="password" id="password" placeholder="New password" class="form-control" autofocus>
                                    </div>
                                </div>
                                <div class="col-lg-6">
                                    <div class="form-group m-t-15">
                                        <label for="confirm">Confirm Password:</label>
                                        <input type="password" name="confirm" id="confirm" placeholder="Confirm password" class="form-control">
                                    </div>
                                </div>
                                <div class="col-lg-12">
                                    <button type="submit" class="btn btn-danger-gradiant m-t-20 btn-arrow"><span> SUBMIT <i class="ti-arrow-right"></i></span></button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>