<div class="contact-box p-r-40">
    <form data-aos="fade-left" data-aos-duration="1200" action="/posts" method="GET">
        <div class="row">
            <div class="col-lg-12">
                <div class="form-group">
                    <filedset>
                        <legend for="search">Search</legend>
                        <input type="text" id="search" name="search" value="<%= query.search %>" placeholder="search key words or phrases" class="form-control"> 
                    </filedset>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="form-group">
                    <filedset>
                        <div>
                            <legend>Location</legend>
                            <input type="text" id="location" name="location" value="<%= query.location %>" placeholder="Address or zipcode" class="form-control">
                            <small><a href="#" id="find-me">Use my location</a></small><br/>
                            <p id="status"></p>
                        </div>
                        <legend>Distance (miles)</legend>
                        <div>
                            <input type="radio" name="distance" id="distance25" value="25" <%= query.distance === '25' ? 'checked' : '' %>>
                            <label for="distance25">25</label>
                        </div>
                        <div>
                            <input type="radio" name="distance" id="distance50" value="50" <%= query.distance === '50' ? 'checked' : '' %>>
                            <label for="distance50">50</label>
                        </div>
                        <div>
                            <input type="radio" name="distance" id="distance100" value="100" <%= query.distance === '100' ? 'checked' : '' %>>
                            <label for="distance100">100</label>
                        </div>
                        <div>
                            <a href="#" id="clear-distance">Clear</a>
                        </div>
                    </filedset>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="form-group">
                    <filedset>
                        <div class="row">
                            <div class="col-lg-12">
                                <legend>Price</legend>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <label for="min">
                                    <input type="number" id="min" name="price[min]" min="0" max="10000" step="0.01" placeholder="min" value="<%= query.price ? query.price.min : '' %>" class="form-control">
                                </label>
                            </div>
                            <div class="col-lg-6">
                                <label for="max">
                                    <input type="number" id="max" name="price[max]" min="0" max="10000" step="0.01" placeholder="max" value="<%= query.price ? query.price.max : '' %>" class="form-control">
                                </label>
                            </div>
                        </div>
                    </filedset>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="form-group m-t-15">
                    <filedset>
                        <legend>Rating</legend>
                        <input type="checkbox" id="zero stars" value="0" name="avgRating[]" <%= query.avgRating && query.avgRating.includes('0') ? 'checked' : '' %>>
                        <label for="zero stars">0 stars</label>
                        <input type="checkbox" id="one star" value="1" name="avgRating[]" <%= query.avgRating && query.avgRating.includes('1') ? 'checked' : '' %>>
                        <label for="one star">1 star</label>
                        <input type="checkbox" id="two stars" value="2" name="avgRating[]" <%= query.avgRating && query.avgRating.includes('2') ? 'checked' : '' %>>
                        <label for="two stars">2 stars</label>
                        <input type="checkbox" id="three stars" value="3" name="avgRating[]" <%= query.avgRating && query.avgRating.includes('3') ? 'checked' : '' %>>
                        <label for="three stars">3 stars</label>
                        <input type="checkbox" id="four stars" value="4" name="avgRating[]" <%= query.avgRating && query.avgRating.includes('4') ? 'checked' : '' %>>
                        <label for="four stars">4 stars</label>
                        <input type="checkbox" id="five stars" value="5" name="avgRating[]" <%= query.avgRating && query.avgRating.includes('5') ? 'checked' : '' %>>
                        <label for="five stars">5 stars</label>
                    </filedset>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="form-group m-t-15">
                    <fieldset>
                        <legend>Search by:</legend>
                        <div>
                            <input type="radio" name="sort" id="newest-sort" value="-_id" <%= query.sort !== '-_id' ? '' : 'checked' %>>
                            <label for="newest-sort">Newest first</label>
                        </div>
                        <div>
                            <input type="radio" name="sort" id="oldest-sort" value="_id" <%= query.sort === '_id' ? 'checked' : '' %>>
                            <label for="oldest-sort">Oldest first</label>
                        </div>
                        <div>
                            <input type="radio" name="sort" id="price-lowest" value="price" <%= query.sort === 'price' ? 'checked' : '' %>>
                            <label for="price-lowest">Lowest price</label>
                        </div>
                        <div>
                            <input type="radio" name="sort" id="price-highest" value="-price" <%= query.sort === '-price' ? 'checked' : '' %>>
                            <label for="price-highest">Highest price</label>
                        </div>
                        <div>
                            <input type="radio" name="sort" id="rating-highest" value="-avgRating" <%= query.sort === '-avgRating' ? 'checked' : '' %>>
                            <label for="rating-highest">Highest average rating</label>
                        </div>
                        <div>
                            <input type="radio" name="sort" id="rating-lowest" value="avgRating" <%= query.sort === 'avgRating' ? 'checked' : '' %>>
                            <label for="rating-lowest">Lowest average rating</label>
                        </div>
                    </fieldset>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="form-group m-t-15">
                    <fieldset>
                        <legend>How many posts would you like per page?</legend>
                        <div>
                            <input type="number" name="postAmount" value="<%= query.postAmount ? query.postAmount : '10'%>" class="form-control">
                            <small>Max 50</small>
                        </div>
                    </fieldset>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div>
                    <a href="/posts">Reset form</a>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <button type="submit" class="btn btn-danger-gradiant m-t-20 btn-arrow"><span> SUBMIT <i class="ti-arrow-right"></i></span></button>
            </div>
        </div>
    </form>
</div>