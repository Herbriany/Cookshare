<% layout('layouts/boilerplate') -%>

<div class="container">
    <div class="spacer">
        <div class="row m-0">
            <div class="col-lg-8">
                <div class="contact-box p-r-40">
                    <h4 class="title">Login</h4>
                    <form data-aos="fade-left" data-aos-duration="1200" action="/login" method="POST">
                        <div class="row">
                            <div class="col-lg-6">
                                <div class="form-group m-t-15">
                                    <label for="username">Username:</label>
                                    <input type="text" id="username" name="username" placeholder="username" class="form-control" required>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="form-group m-t-15">
                                    <label for="password">Password:</label>
                                    <input type="password" id="password" name="password" placeholder="password" class="form-control" required>
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <button type="submit" class="btn btn-danger-gradiant m-t-20 btn-arrow"><span> SUBMIT <i class="ti-arrow-right"></i></span></button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-lg-4">
                <p class="m-t-30 op-8">
                    <a href="/forgot-password">Forgot Password?</a>
                </p>
            </div>
        </div>
    </div>
</div>